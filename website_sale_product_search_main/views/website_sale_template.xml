<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="layout" inherit_id="website.layout">
        <xpath expr="//t[@t-as='submenu']" position="after">
            <link rel="stylesheet" href="/website_sale_product_search_main/static/src/css/website_sale_style.css"/>
            <li class="nav-item">
                <form t-att-action="'/shop'" method="get" id="product_search_main" class="product_search_main">
                    <t t-call="website.website_search_box"/>
                </form> 
            </li>
        </xpath>
    </template>
    <template id="products" inherit_id="website_sale.products" priority="100">
        <xpath expr="//t[@t-call='website_sale.search']" position="replace"/>
    </template>
    <template id="product_brands" inherit_id="website_sale_product_brand.product_brands" priority="100">
        <xpath expr="//div[@class='container']/div[@class='row']" position="replace"/>
    </template>
</odoo>